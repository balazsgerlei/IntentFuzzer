<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/type_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        android:layout_gravity="center_horizontal"
        app:singleSelection="true"/>

    <ListView
        android:id="@+id/cmp_listview"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/add_non_null_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/add_non_null_action"/>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fuzz_all_null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="4dp"
            android:text="@string/fuzz_all_null"
            android:maxLines="2"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fuzz_all_se"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="4dp"
            android:text="@string/fuzz_all_se"
            android:maxLines="2"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
